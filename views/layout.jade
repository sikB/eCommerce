doctype html
html
	head
		title= title
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Molle:400italic|Courgette')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		nav.navbar.navbar-default.navbar-fixed-top
			.contaner-fluid
				.col-sm-6.headerImg
					a(href='/')
						img(src='images/logo2.png')
				.col-sm-6.buttonsToFloat
					if page == 'register'
						a(href='/logIn')
							button.btn.btn-primary(type='submit') Log In
					if page == 'home'
						a(href='/register')
							button.btn.btn-primary(type='submit') Register
						a(href='/logIn')
							button.btn.btn-primary(type='submit') Log In
					if username
						p.userName Welcome #{username}
					if page == 'order'
						p.userName Welcome #{username}

			.row
				.col-sm-12.description
					h1 A better way to enjoy your favorite cigar
					h4 Freshly rolled cigars delivered weekly to your door
		block content
		.footer.col-sm-12.text-center
			p &copy SikMarketing 2016 | Bogdan Sikhovski